#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "stdio.h"

using namespace std;

void main ()
{ int p1, p2, p3, np, nf, total, faltas;
cout<<"Ingrese las notas de sus parciales:";
cout<<"parcial 1: ";
cin>>p1;
cout<<"parcial 2: ";
cin>>p2;
cout<<"parcial 3: ";
cin>>p3;
cout<<"Ingrese nota practica: ";
cin>>np;
cout<<"Introducir numero de faltas: ";
cin>>faltas;
if(faltas>10)
{cout<<No puede dar final, su nota es: "<<((p1+p2+p3)/3)*0.4+(np*0.2);}
else
{cout<<"Nota del examen final: ";
cin>>nf;
total=(((p2+p1+p3)/3)*0.4)+(np*0.2)+(nf*0.4);
cout<<"Su nota final es "<<total; }
getch();
}
