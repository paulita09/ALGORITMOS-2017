#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main(){

float a,b,c,s,p;
cout<<"ingrese los 3 num:";
cin>>a;
cin>>b;
cin>>c;

s=a+b+c;
p=(a+b+c)/3;

if((a>b)&&(a<c))
{ cout<<"el numero mayor es:"<<a<<endl;
}

else if((b>a)&&(b<c))
{ cout<<"el numero mayor es:"<<b<<endl;
}

else if((c>a)&&(c<b))
{ cout<<"el numero mayor es:"<<c<<endl;
}

cout<<"la suma es:"<<s<<endl;

cout<<"el promedio es:"<<p<<endl;

getch();

}
